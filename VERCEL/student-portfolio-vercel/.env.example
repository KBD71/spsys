# 환경 변수 예시
# .env 파일로 복사하여 실제 값으로 변경하세요

# Google Service Account Email
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Google Private Key (JSON 키 파일에서 복사)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google Sheets ID (스프레드시트 URL에서 추출)
# https://docs.google.com/spreadsheets/d/[SPREADSHEET_ID]/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# 비밀번호 해싱 Salt (랜덤 문자열)
SALT=your_random_salt_string_change_this_to_secure_value

# ============================================================
# Vercel KV (Redis) 캐시 설정 (선택사항)
# ============================================================
# Vercel Dashboard > Storage > Create KV Database 후 자동으로 설정됩니다
# 로컬 개발 시에는 없어도 In-memory 캐시로 폴백됩니다
# 프로덕션 배포 시 성능 향상을 위해 설정을 권장합니다

# KV_REST_API_URL=https://your-kv-url.upstash.io
# KV_REST_API_TOKEN=your_kv_token_here
